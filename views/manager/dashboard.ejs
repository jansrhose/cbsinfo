<!DOCTYPE html>
<html>
<head>
  <title>Manager Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-image: linear-gradient(90deg, #DAA06D , #EADDCA);
    }
    nav {
      background-color: #333;
      height: 50px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }
    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      font-family: "Bruno Ace", cursive;
    }
    nav ul li {
      margin-right: 20px;
      font-family: "Bruno Ace", cursive;
    }
    nav ul li a {
      color: gray;
      text-decoration: none;
      font-family: "Bruno Ace", cursive;
      position: relative;
      transition: color 0.3s, opacity 0.3s;
    }
    nav ul li a:before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #DAA06D;
      bottom: -5px;
      left: 0;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }
    nav ul li a:hover {
      color: #DAA06D;
      opacity: 0.8;
    }
    nav ul li a:hover:before {
      visibility: visible;
      transform: scaleX(1);
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      margin-top: 20px;
    }
    .container h1 {
      font-size: 36px;
      color: #DAA06D;
      margin-bottom: 2em;
      padding: 1rem;
      font-family: "Bruno Ace", cursive;
    }
    .table {
      width: 100%;
      max-width: 1200px;
      border-collapse: collapse;
    }
    .table th,
    .table td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #DAA06D;
    }
    .table th {
      background-color: #EADDCA;
      color: #333;
      font-weight: bold;
    }
    .text-center {
      text-align: center;
    }
    .mt-4 {
      margin-top: 4rem;
    }
    .btn {
      display: inline-block;
      padding: 0.5rem 1.5rem;
      font-size: 16px;
      color: #fff;
      background-color: #DAA06D;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .btn:hover {
      background-color: #b68051;
    }
    h1 {
      font-size: 36px;
        color: #DAA06D;
        margin-bottom: 2em;
        padding: 1rem;
        transform: translate(10%, 10%);
        display: inline-block;
        background: #EADDCA;
        border-radius: 5rem;
        box-shadow: 0 0 0.5rem 0.5rem rgba(234, 221, 202, 0.5);
        font-size: 2.5rem;
        font-family: "Bruno Ace", cursive;
        width: fit-content; /* Added width property */
    }   
  </style>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
  <nav>
    <ul>
      <li style="color: #fff;">Manager Dashboard</li> 
      <li><a href="/manager/logout">Logout</a></li>
    </ul>
  </nav>
  <main>
    <div class="container">
      <h1>Pet List</h1>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Pet Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Service</th>
            <th>Owner</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Weight</th>
            <th>Manager ID</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const [index, pet] of pets.entries()) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= pet.petName %></td>
            <td><%= pet.breed %></td>
            <td><%= pet.age %></td>
            <td><%= pet.gender %></td>
            <td><%= pet.service %></td>
            <td><%= pet.owner %></td>
            <td><%= pet.contact %></td>
            <td><%= pet.email %></td>
            <td><%= pet.createdAt %></td>
            <td><%= pet.weight %></td>
            <td><%= pet.managerId %></td>
            <td>
              <form action="/manager/edit-pet" method="GET" style="display: inline;">
                <input type="hidden" name="petId" value="<%= pet.id %>">
                <button type="submit" class="btn btn-warning"><i class="fas fa-pen-to-square"></i></button>
              </form>
              <form action="/manager/delete" method="POST" style="display: inline;">
                <input type="hidden" name="petId" value="<%= pet.id %>">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <div class="text-center mt-4">
        <a class="btn btn-primary" id="addManagerBtn" href="/add-pet">Add Pet</a>
      </div>

    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
