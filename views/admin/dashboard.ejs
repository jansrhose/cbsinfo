<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


  <style>
    body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: linear-gradient(90deg, #DAA06D , #EADDCA);
        }
     nav {
    background-color: #333;
    height: 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    font-family: "Bruno Ace", cursive;
}

nav ul li {
    margin-right: 20px;
    font-family: "Bruno Ace", cursive;
}

nav ul li a {
    color: gray;
    text-decoration: none;
    font-family: "Bruno Ace", cursive;
    position: relative;
    transition: color 0.3s, opacity 0.3s;
}

nav ul li a:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #DAA06D;
    bottom: -5px;
    left: 0;
    visibility: hidden;
    transform: scaleX(0);
    transition: all 0.3s ease-in-out;
}

nav ul li a:hover {
    color: #DAA06D;
    opacity: 0.8;
}

nav ul li a:hover:before {
    visibility: visible;
    transform: scaleX(1);
}

     h1 {
      font-size: 36px;
        color: #DAA06D;
        margin-bottom: 2em;
        padding: 1rem;
        transform: translate(10%, 10%);
        display: inline-block;
        background: #EADDCA;
        border-radius: 5rem;
        box-shadow: 0 0 0.5rem 0.5rem rgba(234, 221, 202, 0.5);
        font-size: 2.5rem;
        font-family: "Bruno Ace", cursive;
        width: fit-content; /* Added width property */
    }
    a{ 
      font-family: "Bruno Ace", cursive;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">Home</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/admin/pets">Pet Transaction</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main>
    <h1>Manager List</h1>
    <div class="container">
      
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% let count = 1; %>
            <% for (const manager of managers) { %>
              <tr>
                <td><%= count %></td>
                <td><%= manager.firstName %></td>
                <td><%= manager.middleName ? manager.middleName : '-' %></td>
                <td><%= manager.lastName %></td>
                <td><%= manager.contact %></td>
                <td><%= manager.email %></td>
                <td>
                  <form action="/admin/edit-manager" method="GET" style="display: inline;">
                    <input type="hidden" name="managerId" value="<%= manager.id %>">
                    <button type="submit" class="btn btn-warning"><i class="fas fa-pen-to-square"></i></button>
                  </form>
                  
                  <form action="/admin/delete" method="POST" style="display: inline;">
                    <input type="hidden" name="managerId" value="<%= manager.id %>">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                  </form>
                  
                  </td>
                  
              </tr>
              <% count++; %>
            <% } %>
          </tbody>
          
          
      </table>
      
      <div class="text-center mt-4">
        <a class="btn btn-primary" id="addManagerBtn" href="/add-manager">Add Manager</a>
      </div>
    </div>
  </main>
  <script src="https://use.fontawesome.com/60c6218a59.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
