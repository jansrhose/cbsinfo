<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
   <!-- BOOTSTRAP -->
   <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">

   <!-- FONT AWESOME -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Bruno Ace", cursive;
      background-image: linear-gradient(90deg, #DAA06D , #EADDCA);
    }

    header{
      background-color: #333;
      font-family: "Bruno Ace", cursive;
      justify-content: flex-start; 
      text-align: left;
      align-content: flex-start;
    }

    nav {
      padding: 0 20px;
      height: 60px;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    nav ul li {
      margin-right: 20px;
    }

    nav ul li a {
      color: gray;
      text-decoration: none;
      position: relative;
      transition: color 0.3s, opacity 0.3s;
    }

    nav ul li a:before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #DAA06D;
      bottom: -5px;
      left: 0;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
      color: #DAA06D;
    }

    nav ul li a:hover {
      color: #DAA06D;
      opacity: 0.8;
    }

    nav ul li a:hover:before {
      visibility: visible;
      transform: scaleX(1);
      color: #DAA06D;
    }

    h1 {
      font-size: 36px;
      color: #DAA06D;
      margin-bottom: 40px;
      padding: 1rem;
      transform: translate(10%, 10%);
      display: inline-block;
      background: #EADDCA;
      font-family: "Bruno Ace", cursive;
      border-radius: 5rem;
      box-shadow: 0 0 0.5rem 0.5rem rgba(234, 221, 202, 0.5);
      font-size: 2.5rem;
      width: fit-content; /* Added width property */
      margin-top: 15px;
    }

    a {
      font-family: "Bruno Ace", cursive;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/admin/dashboard">Home</a>
          </li>
          <li class="nav-item">
            <a href="/admin/pets">Pet Transaction</a>
          </li> 
          <li class="nav-item">
            <a href="/admin/dashboard">Manager List</a>
          </li>
          <li class="nav-item">
            <a href="/admin/logout">Logout</a>
          </li>
        </ul>
      </div>
  </nav>
  </header>
  <main>
    <h1>Pet List Transaction Record</h1>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>Pet Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Service</th>
            <th>Owner</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Weight</th>
            <th>Manager ID</th>
          </tr>
        </thead>
        <tbody>
          <% pets.forEach((pet) => { %>
            <tr>
              <td><%= pet.petName %></td>
              <td><%= pet.breed %></td>
              <td><%= pet.age %></td>
              <td><%= pet.gender %></td>
              <td><%= pet.service %></td>
              <td><%= pet.owner %></td>
              <td><%= pet.contact %></td>
              <td><%= pet.email %></td>
              <td><%= pet.weight %></td>
              <td><%= pet.managerId %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
