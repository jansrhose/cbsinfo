<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">

    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
     body {
      margin: 0;
      padding: 0;
      font-family: "Bruno Ace", cursive;
      background-image: linear-gradient(90deg, #DAA06D , #EADDCA);
    }

    header{
      background-color: #333;
      font-family: "Bruno Ace", cursive;
      justify-content: flex-start; 
      text-align: left;
      align-content: flex-start;
    }

    nav {
      padding: 0 20px;
      height: 60px;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    nav ul li {
      margin-right: 20px;
    }

    nav ul li a {
      color: gray;
      text-decoration: none;
      position: relative;
      transition: color 0.3s, opacity 0.3s;
    }

    nav ul li a:before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #DAA06D;
      bottom: -5px;
      left: 0;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }

    nav ul li a:hover {
      color: #DAA06D;
      opacity: 0.8;
    }

    nav ul li a:hover:before {
      visibility: visible;
      transform: scaleX(1);
    }

    h1 {
      font-size: 36px;
      color: #DAA06D;
      margin-bottom: 40px;
      padding: 1rem;
      transform: translate(10%, 10%);
      display: inline-block;
      background: #EADDCA;
      font-family: "Bruno Ace", cursive;
      border-radius: 5rem;
      box-shadow: 0 0 0.5rem 0.5rem rgba(234, 221, 202, 0.5);
      font-size: 2.5rem;
      width: fit-content; /* Added width property */
      margin-top: 15px;
    }

    form {
      margin-top: 2rem;
      width: 100%;
    }

    form div {
      margin-bottom: 1rem;
    }

    form label {
      display: inline-block;
      width: 100px;
      font-weight: bold;
      font-family: "Bruno Ace", cursive;
    }

    form input[type="email"]{
      width: 500px;
      padding: 0.5rem;
      font-family: Arial, sans-serif;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    form input[type="text"],
    form input[type="number"],
    form input[type="password"] {
      width: 300px;
      padding: 0.5rem;
      font-family: Arial, sans-serif;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    form button {
      padding: 0.5rem 1rem;
      font-size: 16px;
      color: #DAA06D;
      background-color: #EADDCA;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
      font-family: "Bruno Ace", cursive;
    }

    form button:hover {
      background-color: #b68051;
    }

    .content p{
     color: #333;
     font-family: "Bruno Ace", cursive;
    }

    .requirement-list li{
      list-style: none;
      font-family: "Bruno Ace", cursive;
    }

    .requirement-list li i{
      width: 20px;
      color: #333;
    }

    .requirement-list li.valid i{
      color: #333;
    }

    .requirement-list li span{
      margin-left: 12px;
      color: #333;
      font-family: "Bruno Ace", cursive;
    }

    .requirement-list li.valid span{
      color: #333;
    }

    .content ul li{
      list-style-type: none;
      text-decoration: none;
      text-decoration-style: none;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li>
              <a href="/admin/dashboard">Home</a>
            </li>
            <li>
              <a href="/admin/pets">Pet Transaction</a>
            </li> 
            <li>
              <a href="/admin/dashboard">Manager List</a>
            </li>
            <li>
              <a href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
    </nav>
  </header>
  <main>
    <h1>Add Manager</h1>
    <div class="container"> 
     <form method="POST" action="/add-manager">
      <div class="row">
        <div class=" form-group col-sm-4 mb-3">
          <label for="firstName">First Name</label>
          <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="col-sm-4 mb-3">
          <label for="middleName">M. Initial</label>
          <input type="text" id="middleName" name="middleName" maxlength="2">
        </div>
        <div class="col-sm-4 mb-3">
          <label for="lastName">Last Name</label>
          <input type="text" id="lastName" name="lastName" required>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="contact">Contact</label>
          <input type="number" id="contact" name="contact" required oninput="limitCharacterInput(this, 11)" >
        </div>
        <div class="col-md-8 mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>
      </div>
      <div class="row">
        <div class="pass-field col-md-4">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>
      </div>
      <div class="row">
        <div class="content">
          <p>Password Must Contain</p>
          <ul class="requirement-list">
            <li>
              <i class="fa-solid fa-circle"></i>
              <span>At least 8 character length</span>
            </li>
            <li>
              <i class="fas fa-circle"></i>
              <span>At least 1 Number (0..9)</span>
            </li>
            <li>
              <i class="fas fa-circle"></i>
              <span>At least 1 Lowercase (a..z)</span>
            </li>
            <li>
              <i class="fas fa-circle"></i>
              <span>At least 1 Uppercase (A..Z)</span>
            </li>
            <li>
              <i class="fas fa-circle"></i>
              <span>At least 1 Special Symbol (!..$)</span>
            </li>
          </ul>
         </div>
      </div>
       <div>
         <button type="submit" disabled>Add Manager</button>
       </div>
     </form>
         </div>
  </main>
  <script>
    const passwordInput = document.querySelector(".pass-field input");
    const requirementList = document.querySelectorAll(".requirement-list li");
    const addButton = document.querySelector("button[type='submit']");
  
    const requirements = [
      { regex: /.{8,}/, index: 0 },
      { regex: /[0-9]/, index: 1 },
      { regex: /[a-z]/, index: 2 },
      { regex: /[A-Z]/, index: 3 },
      { regex: /[^A-Za-z0-9]/, index: 4 },
    ];
  
    passwordInput.addEventListener("keyup", (e) => {
      const passwordValue = e.target.value;
  
      requirements.forEach((item) => {
        const isValid = item.regex.test(passwordValue);
        const requirementItem = requirementList[item.index];
  
        if (isValid) {
          requirementItem.classList.add("valid");
          requirementItem.firstElementChild.className = "fas fa-check";
        } else {
          requirementItem.classList.remove("valid");
          requirementItem.firstElementChild.className = "fas fa-circle";
        }
      });
  
      const allRequirementsMet = requirements.every((item) => {
        const requirementItem = requirementList[item.index];
        return requirementItem.classList.contains("valid");
      });
  
      addButton.disabled = !allRequirementsMet;
    });
  
    function limitCharacterInput(input, maxLength) {
      if (input.value.length > maxLength) {
        input.value = input.value.slice(0, maxLength);
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
