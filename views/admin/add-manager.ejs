<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Bruno Ace", cursive;
      background-image: linear-gradient(90deg, #DAA06D , #EADDCA);
    }
    header {
      background-color: #333;
      font-family: "Bruno Ace", cursive;
      justify-content: flex-start; 
      text-align: left;
      align-content: flex-start;
    }
    header .navbar {
      padding: 0 20px;
      height: 60px;
    }
    header .navbar-brand {
      color: #fff;
    }
    header .navbar-nav {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;
      justify-content: flex-start; /* Align items to the left */
    }
    header .navbar-nav .nav-item {
      margin-right: 20px;
    }
    header .navbar-nav .nav-link {
      color: #fff;
      text-decoration: none;
      font-family: "Bruno Ace", cursive;
      position: relative;
      transition: color 0.3s, opacity 0.3s;
    }
    header .navbar-nav .nav-link:before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #DAA06D;
      bottom: -5px;
      left: 0;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }
    header .navbar-nav .nav-link:hover {
      color: #DAA06D;
      opacity: 0.8;
    }
    header .navbar-nav .nav-link:hover:before {
      visibility: visible;
      transform: scaleX(1);
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      margin-top: 20px;
      text-align: left;
    }
    .container h1 {
      font-size: 36px;
      color: #DAA06D;
      margin-bottom: 2em;
      padding: 1rem;
      font-family: "Bruno Ace", cursive;
      transform: translate(10%, 10%);
      display: inline-block;
      background: #EADDCA;
      border-radius: 5rem;
      box-shadow: 0 0 0.5rem 0.5rem rgba(234, 221, 202, 0.5);
      font-size: 2.5rem;
      font-family: "Bruno Ace", cursive;
      width: fit-content;
    }
    form {
      margin-top: 2rem;
      width: 100%;
    }
    form div {
      margin-bottom: 1rem;
    }
    form label {
      display: inline-block;
      width: 100px;
      font-weight: bold;
      font-family: "Bruno Ace", cursive;
    }

    form input[type="email"]{
      width: 500px;
      padding: 0.5rem;
      font-family: Arial, sans-serif;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    form input[type="text"],
    form input[type="number"],
    form input[type="password"] {
      width: 300px;
      padding: 0.5rem;
      font-family: Arial, sans-serif;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    form button {
      padding: 0.5rem 1rem;
      font-size: 16px;
      color: #DAA06D;
      background-color: #EADDCA;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
      font-family: "Bruno Ace", cursive;
    }
    form button:hover {
      background-color: #b68051;
    }

    .content p{
     color: #333;
     font-family: "Bruno Ace", cursive;
    }

    .requirement-list li{
      list-style: none;
      font-family: "Bruno Ace", cursive;
    }

    .requirement-list li i{
      width: 20px;
      color: #333;
    }

    .requirement-list li.valid i{
      color: #333;
    }

    .requirement-list li span{
      margin-left: 12px;
      color: #333;
      font-family: "Bruno Ace", cursive;
    }

    .requirement-list li.valid span{
      color: #333;
    }

    .content ul li{
      list-style-type: none;
      text-decoration: none;
      text-decoration-style: none;
    }
  </style>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    
        <a class="navbar-brand" href="/admin/dashboard">Admin Dashboard</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/pets">Pet Transaction</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">Manager List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      
    </nav>
  </header>
  <main>
    <div class="container"> 
      <!-- add-manager.ejs -->
     
     <h1>Add Manager</h1>
     
     <form method="POST" action="/add-manager">
      <div class="row">
        <div class=" form-group col-sm-4 mb-3">
          <label for="firstName">First Name</label>
          <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="col-sm-4 mb-3">
          <label for="middleName">M. Initial</label>
          <input type="text" id="middleName" name="middleName">
        </div>
        <div class="col-sm-4 mb-3">
          <label for="lastName">Last Name</label>
          <input type="text" id="lastName" name="lastName" required>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="contact">Contact</label>
          <input type="number" id="contact" name="contact" required  >
        </div>
        <div class="col-md-8 mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>
      </div>
       <div class="pass-field">
         <label for="password">Password</label>
         <input type="password" id="password" name="password" required>
       </div>
       <div class="content">
        <p>Password Must Contain</p>
        <ul class="requirement-list">
          <li>
            <i class="fa-solid fa-circle"></i>
            <span>At least 8 character length</span>
          </li>
          <li>
            <i class="fas fa-circle"></i>
            <span>At least 1 Number (0..9)</span>
          </li>
          <li>
            <i class="fas fa-circle"></i>
            <span>At least 1 Lowercase (a..z)</span>
          </li>
          <li>
            <i class="fas fa-circle"></i>
            <span>At least 1 Uppercase (A..Z)</span>
          </li>
          <li>
            <i class="fas fa-circle"></i>
            <span>At least 1 Special Symbol (!..$)</span>
          </li>
        </ul>
       </div>
       <div>
         <button type="submit" disabled>Add Manager</button>
       </div>
     </form>
     
         </div>
  </main>
  <script>
    const passwordInput = document.querySelector(".pass-field input");
    const requirementList = document.querySelectorAll(".requirement-list li");
    const requirements = [
      { regex: /.{8,}/, index: 0 },
      { regex: /[0-9]/, index: 1 },
      { regex: /[a-z]/, index: 2 },
      { regex: /[A-Z]/, index: 3 },
      { regex: /[^A-Za-z0-9]/, index: 4 },
    ];
  
    passwordInput.addEventListener("keyup", (e) => {
      const passwordValue = e.target.value;
  
      const allRequirementsMet = requirements.every((item) => {
        const isValid = item.regex.test(passwordValue);
        const requirementItem = requirementList[item.index];
  
        if (isValid) {
          requirementItem.classList.add("valid");
          requirementItem.firstElementChild.className = "fas fa-check";
        } else {
          requirementItem.classList.remove("valid");
          requirementItem.firstElementChild.className = "fas fa-circle";
        }
  
        return isValid;
      });
  
      const addButton = document.querySelector("button[type='submit']");
      addButton.disabled = !allRequirementsMet;
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
